# platform :ios, '13.0' # This is managed by Flutter

flutter_bin_path = `which flutter`.strip
if flutter_bin_path.empty?
  raise 'Flutter SDK not found. Please add to PATH and try again.'
end
# Resolve the symlink to the actual flutter executable
real_flutter_bin_path = File.realpath(flutter_bin_path)
# The Flutter SDK root is two levels up from the real bin path
flutter_root = File.dirname(File.dirname(real_flutter_bin_path))

load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_additional_ios_build_settings(target)
  # You can add any additional build settings here.
  target.build_configurations.each do |config|
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
